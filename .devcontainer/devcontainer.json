{
  "name": "tutorial-pivo-devcontainer",
  
  "image":"charlyreux/pivo-tutorial",

  "customizations": {
    "vscode": {
      "extensions": ["42Crunch.vscode-openapi","dsznajder.es7-react-js-snippets","EthanSK.restore-terminals"],
      "settings": {

      }
    }
  },
  "initializeCommand": {
    "backendv1Install": "cd backend/v1 && npm install",
    "backendv2Install": "cd backend/v1 && npm install",
    "frontendInstall": "cd frontend && npm install"
  },
  "appPort": [3000,5173],
  "forwardPorts": [3000,5173],
  "onCreateCommand": {
    "portForwardFront":"gh codespace ports forward 5173:5173 -c $CODESPACE_NAME",
    "portForwardback":"gh codespace ports forward 3000:3000 -c $CODESPACE_NAME",
    "portVisBack":"gh codespace ports visibility 3000:public -c $CODESPACE_NAME"
  },
  "portsAttributes": {
    "3000": {
      "label": "backend",
      "onAutoForward": "notify"
    },
    "5173":{
      "label": "frontend",
      "onAutoForward": "openBrowser"
    }
  }
}